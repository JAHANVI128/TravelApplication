@using Travela.Models.Entities;
@model CityRequest;
@{
    ViewData["HeaderName"] = "City List";
    ViewData["Title"] = "City Master";
    ViewData["MenuName"] = "Tour Route";
}
<div class="row">
    <div class="col-12">
        <div id="order-listing_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-md-12">
                    <a id="addCityBtn" data-bs-toggle="modal" data-bs-target="#addCityModal" class="btn btn-outline-primary" style="float : right;"> Add City</a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table id="tbldata" class="table dataTable" aria-describedby="order-listing_info">
                        <thead>
                            <tr>
                                <th>City Id</th>
                                <th>City Name</th>
                                <th>Is Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/City.js"></script>
    <script src="C:\Users\acer\AppData\Local\Microsoft\TypeScript\5.2\node_modules\types\datatables.net\index.d.ts"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.6/datatables.min.js"></script>

    <!-- Modal -->
    <div class="modal fade" id="addCityModal" tabindex="-1" aria-labelledby="addCityModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCityModalLabel">Add City Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form id="form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CityId" />
                        <div class="mb-3">
                            <label class="form-label" asp-for="CityName">City Name:</label>
                            <input type="text" class="form-control" id="CityName" name="CityName" required>
                            <span class="text-danger" id="cityError"></span>
                            <div class="col-md-4 mt-1">
                                <div class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                    <br />
                                    <input type="checkbox" class="custom-control-input" asp-for="IsActive" />
                                    <label class="custom-control-label float-left">Is Active</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn grey btn-outline-secondary btn-round" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-primary btn-round" id="btnMdlSave">Add</button>
                </div>
            </div>
        </div>
    </div>
}
